# Environment Variables Template for Railway Deployment

# Copy this file and update with your actual values
# Add these variables in your Railway dashboard under Environment Variables

# ===========================================
# CORE CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Primary Supabase Database
DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres
SUPABASE_URL=https://[your-project].supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Redis for Caching & Sessions
REDIS_URL=redis://default:[password]@[host]:[port]

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
ALLOWED_ORIGINS=https://your-dashboard.railway.app,https://your-domain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# ===========================================
# TWILIO VOICE SERVICE
# ===========================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-api.railway.app/webhooks/twilio

# ===========================================
# AI & VOICE CONFIGURATION
# ===========================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000

# ElevenLabs for Voice Cloning
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================
WEBHOOK_SECRET=your-webhook-secret-for-signature-verification
WEBHOOK_TIMEOUT=30000

# ===========================================
# EMAIL SERVICE
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# SendGrid Alternative
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME=Vocelio AI

# ===========================================
# FILE STORAGE
# ===========================================
# Supabase Storage
STORAGE_BUCKET=vocelio-uploads
STORAGE_URL=https://[your-project].supabase.co/storage/v1
STORAGE_PUBLIC_URL=https://[your-project].supabase.co/storage/v1/object/public

# AWS S3 Alternative
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vocelio-production

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Sentry for Error Tracking
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxx.ingest.sentry.io/xxxxx

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Custom Analytics
ANALYTICS_API_KEY=your-analytics-api-key

# ===========================================
# RATE LIMITING & SECURITY
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_VOICE_CLONING=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_CAMPAIGN_OPTIMIZATION=true
ENABLE_WEBHOOK_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ===========================================
# BILLING & PAYMENTS
# ===========================================
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ===========================================
# LOGGING & DEBUGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_DATABASE_LOGGING=false

# ===========================================
# PERFORMANCE & SCALING
# ===========================================
# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# API Configuration
API_TIMEOUT=30000
MAX_REQUEST_SIZE=50mb
ENABLE_COMPRESSION=true

# ===========================================
# COMPLIANCE & PRIVACY
# ===========================================
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true
ENABLE_HIPAA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================
# Only for staging environment
ENABLE_DEBUG_MODE=false
ENABLE_TEST_MODE=false
MOCK_EXTERNAL_SERVICES=false

# ===========================================
# MICROSERVICES COMMUNICATION
# ===========================================
# Internal service URLs (Railway internal networking)
VOICE_SERVICE_URL=http://voice-service.railway.internal:3001
CAMPAIGN_SERVICE_URL=http://campaign-service.railway.internal:3002
ANALYTICS_SERVICE_URL=http://analytics-service.railway.internal:3003
CALL_SERVICE_URL=http://call-service.railway.internal:3004

# Service Authentication
INTERNAL_SERVICE_SECRET=your-internal-service-secret-key

# ===========================================
# HEALTH CHECKS & MONITORING
# ===========================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
ENABLE_METRICS_ENDPOINT=true
METRICS_PORT=9090
