# Agents Service - Agent Management (Port 8001)
FROM python:3.11-slim

WORKDIR /app

# Copy service files
COPY apps/agents /app/apps/agents
COPY shared /app/shared

# Install dependencies
COPY apps/agents/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Environment setup
ENV PYTHONPATH="/app"
ENV PORT=${PORT:-8001}

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

EXPOSE ${PORT}

# Start the service
CMD uvicorn apps.agents.src.main:app --host 0.0.0.0 --port ${PORT}
