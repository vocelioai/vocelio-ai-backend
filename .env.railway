# Railway Environment Variables for Vocelio AI Call Center
# Copy this content to your Railway environment variables dashboard

# Core Application
PYTHON_VERSION=3.11
PORT=8000
ENVIRONMENT=production
DEBUG=false

# Database Configuration
DATABASE_URL=${{Postgres.DATABASE_URL}}
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# Redis Configuration (Railway Redis addon)
REDIS_URL=${{Redis.REDIS_URL}}

# Authentication
JWT_SECRET_KEY=your_production_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# External API Keys
OPENAI_API_KEY=your_openai_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key
RAMBLE_API_KEY=your_ramble_api_key

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# CORS Configuration for Railway
CORS_ORIGINS=https://vocelio-dashboard.railway.app,https://your-custom-domain.com

# Service Configuration for Railway (using Railway internal URLs)
OVERVIEW_HOST=overview.railway.internal
OVERVIEW_PORT=8001
AGENTS_HOST=agents.railway.internal
AGENTS_PORT=8002
SMART_CAMPAIGNS_HOST=smart-campaigns.railway.internal
SMART_CAMPAIGNS_PORT=8003
CALL_CENTER_HOST=call-center.railway.internal
CALL_CENTER_PORT=8004

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Voice Provider Configuration
PIPER_TTS_MODEL_PATH=/app/models/piper
VOICE_CLONE_STORAGE_PATH=/app/storage/voice-clones

# File Upload Configuration
MAX_FILE_SIZE=50000000
ALLOWED_AUDIO_FORMATS=wav,mp3,ogg,flac
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif

# Webhook Configuration
WEBHOOK_SECRET=your_production_webhook_secret
WEBHOOK_TIMEOUT=30

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Railway Specific
RAILWAY_STATIC_URL=https://vocelio-backend.railway.app
RAILWAY_PUBLIC_DOMAIN=vocelio-backend.railway.app

# Deployment Mode
NODE_ENV=production

# API Gateway
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000

# Email Notifications
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
DEFAULT_FROM_EMAIL=support@vocelio.ai

# AI Fallback
OPENAI_MODEL=gpt-4o-mini
